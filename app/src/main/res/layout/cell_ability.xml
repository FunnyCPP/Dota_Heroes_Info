<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/layout_bg"
    android:foregroundGravity="center"
    android:gravity="center"
    app:layout_anchorGravity="center">

    <ImageView
        android:id="@+id/imgAbility"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:foregroundGravity="center_vertical"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/imgAbility"
        android:fontFamily="sans-serif-medium"
        android:text="TextView"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_toEndOf="@+id/imgAbility"
        android:text="TextView" />

    <ImageView
        android:id="@+id/ImgManacost"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_below="@+id/txtDescription"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:layout_toEndOf="@+id/imgAbility"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/txtManacost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:layout_toEndOf="@+id/ImgManacost"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imgCooldawn"
        android:layout_width="22sp"
        android:layout_height="22sp"
        android:layout_below="@+id/txtDescription"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:layout_toEndOf="@+id/txtManacost"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/txtCooldown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescription"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:layout_toEndOf="@+id/imgCooldawn"
        android:text="TextView" />
</RelativeLayout>